<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dataShowlayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DataShow">



    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/location2"
        android:textSize="36sp"
        android:textColor="#000"
        android:text="London"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <TextView
        android:layout_gravity="center_horizontal"
        android:id="@+id/country2"
        android:textColor="#000"
        android:textSize="36sp"
        android:text="UK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:background="@drawable/sunicon"
        android:id="@+id/weatherImage2"
        android:layout_marginTop="8dp"
        android:layout_width="185dp"
        android:layout_height="155dp"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:id="@+id/main2"
        android:text="Sunny"
        android:layout_marginTop="6dp"
        android:textColor="#000"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"/>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:id="@+id/maxTemp2"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:text="Max"
            android:textColor="#000"
            android:textSize="24sp" />



        <LinearLayout
            android:layout_marginStart="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/windicon2"
                android:layout_width="47dp"
                android:layout_height="42dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18dp"
                android:background="@drawable/windicon" />
            <TextView
                android:id="@+id/windSpeed2"
                android:text="Sunny"
                android:layout_marginTop="12dp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Temp2"
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="12dp"
            android:textColor="#000"
            android:textSize="48sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/humidityicon2"
                android:layout_width="47dp"
                android:layout_height="42dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18dp"
                android:background="@drawable/humidityicon" />
            <TextView
                android:id="@+id/humidity2"
                android:text="Sunny"
                android:layout_marginTop="12dp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/minTemp2"
            android:text="Min"
            android:layout_marginTop="12dp"
            android:textColor="#000"
            android:layout_gravity="center_vertical"
            android:layout_width="120dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:textSize="24sp"/>



        <LinearLayout
            android:layout_marginStart="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/pressureicon2"
                android:layout_width="47dp"
                android:layout_height="42dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18dp"
                android:background="@drawable/pressureicon" />
            <TextView
                android:id="@+id/pressure2"
                android:text="Sunny"
                android:layout_marginTop="12dp"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textSize="20sp"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_marginTop="0dp"
        android:layout_gravity="center_horizontal"
        android:textColor="#fff"
        android:padding="10dp"
        android:text="Refresh"
        android:textSize="18sp"
        android:background="@drawable/input"
        android:id="@+id/Refresh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>